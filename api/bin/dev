#!/usr/bin/env node
const { exec, spawn } = require('child_process');

function cmd(command) {
  return new Promise((resolve, reject) => {
    exec(command, (error, stdout, stderr) => {
      if (error) {
        console.error(stderr);
        reject(error);
      } else {
        console.log(stdout);
        resolve();
      }
    });
  });
}

let serverProcess;

function transpile() {
  return cmd('yarn build');
}

function lint() {
  return cmd('yarn lint');
}

function run_server() {
  if (serverProcess) {
    serverProcess.kill();
  }

  serverProcess = spawn('yarn', ['start'], { stdio: 'inherit' });

  serverProcess.on('close', (code) => {
    if (code !== null) {
      console.log(`Server process exited with code ${code}`);
    }
  });
}

async function main() {
  try {
    await lint();
    await transpile();
    run_server();
  } catch (error) {
    console.error('Error during automation script execution:', error);
  }
}

main();

process.on('SIGINT', () => {
  if (serverProcess) {
    serverProcess.kill();
  }
  process.exit();
});
